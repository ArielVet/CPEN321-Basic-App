<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServerInfo">

    <TextView
        android:id="@+id/server_ip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="@string/server_ip_cap"
        app:layout_constraintBottom_toTopOf="@+id/client_ip_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/logged_in_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logged_in_name_cap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/backend_name_text"
        app:layout_constraintTop_toBottomOf="@+id/backend_name_text"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/backend_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backend_name_cap"
        app:layout_constraintBottom_toTopOf="@+id/logged_in_name_text"
        app:layout_constraintStart_toStartOf="@+id/client_time_text"
        app:layout_constraintTop_toBottomOf="@+id/client_time_text"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/client_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/client_time_cap"
        app:layout_constraintBottom_toTopOf="@+id/backend_name_text"
        app:layout_constraintStart_toStartOf="@+id/server_time_text"
        app:layout_constraintTop_toBottomOf="@+id/server_time_text"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/server_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_time_cap"
        app:layout_constraintBottom_toTopOf="@+id/client_time_text"
        app:layout_constraintStart_toStartOf="@+id/client_ip_text"
        app:layout_constraintTop_toBottomOf="@+id/client_ip_text"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/client_ip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/client_ip_cap"
        app:layout_constraintBottom_toTopOf="@+id/server_time_text"
        app:layout_constraintStart_toStartOf="@+id/server_ip_text"
        app:layout_constraintTop_toBottomOf="@+id/server_ip_text"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>